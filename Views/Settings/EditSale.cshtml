@model AddNewSaleViewModel

<h5 class="bp-3">Добавить акцию</h5>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Settings" asp-action="EditSale" method="POST" class="mb-3">
            <div class="form-group">
                <label asp-for="@Model.Title"></label>
                <input class="form-control" asp-for="@Model.Title" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">    
                <label asp-for="@Model.Description"></label>
                <textarea rows="5" class="form-control" asp-for="@Model.Description"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShortDescription"></label>
                <textarea rows="4" class="form-control" asp-for="@Model.ShortDescription"></textarea>
                <span asp-validation-for="@Model.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.StartDate"></label>
                <input class="form-control" asp-for="@Model.StartDate" />
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ExpireDate"></label>
                <input class="form-control" asp-for="@Model.ExpireDate" />
                <span asp-validation-for="@Model.ExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImgUrl"></label>
                <input class="form-control" asp-for="@Model.ImgUrl" />
                <span asp-validation-for="@Model.ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CompanyName"></label>
                <input class="form-control" asp-for="@Model.CompanyName" />
                <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>
            </div>
            @{
                foreach(Tag tag in @Model.AllTags)
                {
                    var res = @Model.SelectedTags.FirstOrDefault(c => c == tag.TagId);
                    var cheched = (res != null);

                    <input name="SelectedTags" value="@tag.TagId" type="checkbox" checked="@cheched" />
                    <label asp-for="@tag">@tag.Category => @tag.Title</label>
                    <br />
                }
            }
            <input type="submit" value="Отправить" class="btn btn-default" />
        </form>
        <a  asp-area="" asp-controller="Settings" asp-action="Discounts" title="Back to discounts">Вернуться к акциям</a>
    </div>
</div>