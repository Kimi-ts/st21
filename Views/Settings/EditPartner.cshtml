@model Partner

<h5 class="bp-3">Редактировать</h5>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Settings" asp-action="EditPartner" method="POST" class="mb-3">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input class="form-control" asp-for="@Model.Name"/>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="@Model.IsActive" />
                <label class="form-check-label" asp-for="@Model.IsActive"></label>
                <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.OrderNumber"></label>
                <input class="form-control" asp-for="@Model.OrderNumber" />
                <span asp-validation-for="@Model.OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Notes"></label>
                <textarea rows="4" class="form-control" asp-for="@Model.Notes"></textarea>
                <span asp-validation-for="@Model.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone"></label>
                <input class="form-control" asp-for="@Model.Phone"/>
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.SiteUrl"></label>
                <input class="form-control" asp-for="@Model.SiteUrl"/>
                <span asp-validation-for="@Model.SiteUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.OwnerId"></label>
                <input class="form-control" asp-for="@Model.OwnerId"/>
                <span asp-validation-for="@Model.OwnerId" class="text-danger"></span>
            </div>
            <input type="hidden" name="PartnerId" value="@Model.PartnerId" />
            <input type="submit" value="Отправить" class="btn btn-default" />
        </form>
        <a  asp-area="" asp-controller="Settings" asp-action="Partners" title="Back to partners">К списку партнёров</a>
    </div>
</div>