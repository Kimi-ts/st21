@model SocialNetworkItem

<h5>Добавить соцсеть</h5>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Settings" asp-action="PostSocialNetworkItem" method="POST">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input class="form-control" asp-for="@Model.Name"/>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Type"></label>
                <input class="form-control" asp-for="@Model.Type"/>
                <span asp-validation-for="@Model.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IconClass"></label>
                <input class="form-control" asp-for="@Model.IconClass"/>
                <span asp-validation-for="@Model.IconClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Url"></label>
                <input class="form-control" asp-for="@Model.Url"/>
                <span asp-validation-for="@Model.Url" class="text-danger"></span>
            </div>
            <input type="submit" value="Отправить" class="btn btn-default" />
        </form>
    </div>
</div>