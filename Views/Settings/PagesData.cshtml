@model IList<PageData>

@{
    ViewData["Title"] = "Упраление данными на странице";
    ViewData.AddActivePage(ManageNavPages.ManagePagesInfo);
}

<p class="text-muted">@ViewData["Title"]</p>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Страница</th>
                  <th>Заголовок</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              @foreach(var item in Model)
                {
                <tr>
                  <td>@(Model.IndexOf(item)+1)</td>
                  <td>@item.PageName</td>
                  <td>@item.Title</td>
                  <td>
                    <a asp-area="" asp-controller="Settings" asp-action="EditPageData" asp-route-PageName="@item.PageName" title="Edit">Редактировать</a>
                  </td>
                </tr>
                }
              </tbody>
            </table>
          </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}